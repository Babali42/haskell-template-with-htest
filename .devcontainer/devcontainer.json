{
  "name": "Haskell Stack Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "stack setup && stack build",
  "customizations": {
    "vscode": {
      "extensions": [
        "haskell.haskell",
        "justusadam.language-haskell"
      ]
    }
  },
  "remoteUser": "vscode"
}
